@model HordeWebSite.Models.ViewModel.LoginVM
<div class="container ">
    <h2>Se connecter</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                <form id="account" method="post" asp-action="Login" asp-controller="Account">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-md-2" asp-for="UserName"></label>
                        <div class="col-md-10">
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2" asp-for="Password"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 row offset-2 form-check">
                            <input type="checkbox" asp-for="RememberMe" id="checkboxLogin" class="form-check-input" />
                            <label class="col-md-4" asp-for="RememberMe" for="checkboxLogin"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 offset-2">
                            <input type="submit" value="Login" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="col-md-10 offset-2">
                        <a class="text-primary" asp-area="" asp-controller="Account" asp-action="Register">S'enregistrer</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

