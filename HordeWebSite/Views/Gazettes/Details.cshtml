@model IEnumerable<Gazette>

<dl class="row">
@*        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.page)
        </dt>
        <dd class="col-sm-10">
            @Model.ElementAt(0).page
        </dd>*@
    <dd class="col-sm-10">

        @if (Model.Count() > 0)
        {
            var i = 0;
            @i
            @Model.ElementAt(i).page
            @if (@Model.ElementAt(i).image != null)
            {
                var base64 = Convert.ToBase64String(@Model.ElementAt(i).image);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img src="@imgSrc" />
            }
            @if (i != 0)
            {
                <p>btn-</p>
                <button action="@i--" value="-">-</button>
            }
            @if (i < Model.Count())
            {
                <p>btn+</p>
                <button action="@i++" value="-">+</button>
            }
        }

    </dd>
</dl>

