@model HordeWebSite.Models.Gazette

    <div class="row col-12 justify-content-center">
        <div id="dateGazette" class="col-12">
            <h4>Gazette du @Model.date</h4>
        </div>
        <div id="imageGazette" class="row justify-content-center divImgGazette">
            @if (@Model.image != null)
            {
                var base64 = Convert.ToBase64String(@Model.image);
                var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                <img class="img-fluid" src="@imgSrc" />
            }
        </div>
    </div>
