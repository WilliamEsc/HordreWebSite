@model IEnumerable<Down>
@{ 
    var i = 0;
}

<div id="carouselDownControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var Item in Model)
        {
            if (i == 0)
            {
                @:<div class="carousel-item active">
                i++;
                }
                else
                {
                    @:<div class="carousel-item">
                    }
                    <div>
                        <img class="d-block w-100 h-75" src=@("~/data/img/Down/"+@Item.imageName) asp-append-version="true" alt="slide">
                    </div>
                    <div class="mh-25">
                        <div class="row h-50 m-0">
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job1"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job1+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job1+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member1</p></div></div>
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job2"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job2+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job2+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member2</p></div></div>
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job3"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job3+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job3+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member3</p></div></div>
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job4"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job4+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job4+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member4</p></div></div>
                        </div>
                        <div class="row h-50 m-0">
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job5"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job5+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job5+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member5</p></div></div>
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job6"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job6+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job6+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member6</p></div></div>
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job7"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job7+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job7+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member7</p></div></div>
                            <div class="col-lg-3 col-6 p-2 border border-dark @Item.job8"><div class="row m-0"><img src=@("~/data/img/icoJob/"+@Item.job8+".png") asp-append-version="true" class="img-fluid d-lg-block d-none" width="50" /><img src=@("~/data/img/icoJob/"+@Item.job8+".png") asp-append-version="true" class="d-lg-none" width="30" height="30" /><p class="textDown">@Item.member8</p></div></div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselDownControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselDownControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    if (i == 0)
                    {@:</div>
                }
                else
                {
                @:</div>
            }
        }
    </div>
    </div>
